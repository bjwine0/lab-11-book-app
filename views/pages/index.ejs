<!-- index.ejs -->

<!-- getBooksFromDb -->
<!DOCTYPE html>
<html>

<head>
  <%- include('../layout/head') %>
</head>

<body>
  <header>
    <%- include('../layout/header') %>
  </header>
  <main>

    <ul class="subnav">
      <li>
        <i class="fas fa-search"></i>
        <a href="/new">Search</a>
      </li>
      <li>
        <i class="fas fa-book-open"></i>
        <a href="/">Shelf</a>
      </li>
    </ul>

    <h1><%= books.length %> Saved Books</h1>


    <ul>
      <% books.forEach(books => { %>
      <div>

        <li class="book-items" data-book-id="<%=books.id%>">
          <%- include('books/detail',{books:books})%>
        </li>
        <!-- end base book rendering -->


        <button type="button" onclick="location.href='/books/<%= books.id %>';">View Details</button>
      </div>
      <% }); %>

    </ul>
  </main>
  <footer>
    <%- include('../layout/footer') %>
  </footer>
</body>

</html>