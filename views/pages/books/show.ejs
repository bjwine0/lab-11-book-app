<!-- books/show -->
<!-- view details of one book from db -->

<!DOCTYPE html>
<html>

<head>
  <%- include('../../layout/head') %>
</head>

<body>
    <header>
        <%- include('../../layout/header') %>
    </header>
  <main>
      <ul class="subnav">
          <li>
            <i class="fas fa-search"></i>
            <a href="/new">Search</a>
          </li>
          <li>
              <i class="fas fa-book-open"></i>
            <a href="/">Shelf</a>
          </li>
        </ul>
      <ul>
          <li>
            <%- include('detail', {books:books}) %>
          </li>
          <button type="submit">Delete Book</button>
          <button type="button" name="<%= books.isbn%>"  class="showhidden">Modify Book</button>
        
          <%- include('form', {formAction: 'update', books:books})%>
        </ul>
  </main>
<footer> 
    <%- include('../../layout/footer') %>
</footer>
</body>

</html>





